@inherits LayoutComponentBase
@inject NavigationManager NavManager

<link href="css/MainLayout.css" rel="stylesheet" />

<div class="topbar">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">

    @if (!EsLogin)
    {
        <!-- ZONA IZQUIERDA -->
        <div class="top-left">
            

            <a href="/home">
                <img src="/imagenes/casa.png" class="home-icon" />
            </a>
        </div>
        <div class="top-left">
           <br />
            <br />

            <a href="/Calendario">
                <img src="/imagenes/agenda.png" class="home-icon" />
            </a>
        </div>
        <div class="top-left">
            <br />
            <br />


            <a href="/Graficas">
                <img src="/imagenes/grafica.png" class="home-icon" />
            </a>
        </div>


        <!-- ZONA CENTRO -->
        <div class="top-center">
            <h3>Sistema Gestión de Proyectos</h3>
        </div>
    }
    else
    {
        <!-- Para el login dejamos centro vacío -->
        <div class="top-left"></div>
        <div class="top-center"></div>
    }

    <!-- ZONA DERECHA (Userbar SIEMPRE visible) -->
    <div class="top-right">
        <UserBar />
    </div>

</div>

@if (!EsLogin)
{
    <NavMenu MenuOpen="menuOpen" />
}

<div class="main-content">
    @Body
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</div>

@code {
    private bool menuOpen = false;

    private bool EsLogin => NavManager.Uri.EndsWith("/");

    void ToggleMenu()
    {
        menuOpen = !menuOpen;
    }
}