@page "/distribucion-presupuesto"
@using System.Net.Http.Json
@using FrontendBlazorApi.Models
@using System.Globalization
@inject IHttpClientFactory fabricaHttp
@inject IJSRuntime JS
@rendermode InteractiveServer

<PageTitle>Gestión de Distribución de Presupuesto</PageTitle>

<!-- ENCABEZADO -->
<div class="d-flex align-items-center mb-3">
    <i class="bi bi-cash-stack fs-3 text-success me-2"></i>
    <h3 class="mb-0 fw-bold">Gestión de Distribución de Presupuesto</h3>
</div>

@if (!string.IsNullOrWhiteSpace(mensaje))
{
    <div class="@claseAviso shadow-sm mb-3" role="alert">
        <i class="bi bi-info-circle-fill me-2"></i>@mensaje
    </div>
}

<!-- FORMULARIO -->
<div class="card border-success shadow-sm mb-4">
    <div class="card-header bg-success text-white fw-bold">
        <i class="bi bi-pencil-square me-2"></i>Formulario de Distribución
    </div>

    <div class="card-body">
        <div class="d-flex flex-wrap gap-2 mb-3">
            <button class="btn btn-outline-secondary" @onclick="ProbarConexion"><i class="bi bi-wifi"></i></button>
            <button class="btn btn-outline-primary" @onclick="CargarDistribuciones"><i class="bi bi-list"></i></button>
            <button class="btn btn-outline-dark" @onclick="LimpiarFormulario"><i class="bi bi-eraser"></i></button>
        </div>

        <div class="input-group mb-4">
            <span class="input-group-text"><i class="bi bi-search"></i></span>
            <InputNumber class="form-control" placeholder="Ingrese ID de distribución" @bind-Value="idBusqueda" />
            <button class="btn btn-secondary" @onclick="BuscarPorId"><i class="bi bi-arrow-right-circle"></i></button>
        </div>

        <EditForm Model="distribucionActual" OnValidSubmit="GuardarSegunEstado">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Presupuesto Padre *</label>
                    <InputSelect class="form-select" @bind-Value="distribucionActual.IdPresupuestoPadre">
                        <option value="0">-- Seleccione --</option>
                        @foreach (var p in listaPresupuestos)
                        {
                            <option value="@p.Id">@GetPresupuestoNombre(p.Id)</option>
                        }
                    </InputSelect>
                    <ValidationMessage For="@(() => distribucionActual.IdPresupuestoPadre)" />
                </div>

                <div class="col-md-4">
                    <label class="form-label">Proyecto Hijo *</label>
                    <InputSelect class="form-select" @bind-Value="distribucionActual.IdProyectoHijo">
                        <option value="0">-- Seleccione --</option>
                        @foreach (var pr in listaProyectos)
                        {
                            <option value="@pr.Id">@pr.Titulo</option>
                        }
                    </InputSelect>
                    <ValidationMessage For="@(() => distribucionActual.IdProyectoHijo)" />
                </div>

                <div class="col-md-4">
                    <label class="form-label">Monto Asignado *</label>
                    <InputNumber class="form-control" @bind-Value="distribucionActual.MontoAsignado" />
                    <ValidationMessage For="@(() => distribucionActual.MontoAsignado)" />
                </div>
            </div>

            <div class="mt-4 d-flex flex-wrap gap-2">
                <button type="submit" class="btn btn-success"><i class="bi bi-plus-circle"></i></button>
                <button type="button" class="btn btn-warning" @onclick="ActualizarDistribucion" disabled="@(!existeDistribucion)">
                    <i class="bi bi-arrow-clockwise"></i>
                </button>
                <button type="button" class="btn btn-danger" @onclick="ConfirmarEliminar" disabled="@(!existeDistribucion)">
                    <i class="bi bi-trash"></i>
                </button>
            </div>
        </EditForm>
    </div>
</div>

<!-- LISTA -->
<div class="card border-success shadow-sm">
    <div class="card-header bg-success text-white fw-bold">
        <i class="bi bi-table me-2"></i>Lista de Distribuciones
    </div>

    <div class="card-body">
        @if (cargando)
        {
            <p><em><i class="bi bi-arrow-repeat"></i> Cargando distribuciones...</em></p>
        }
        else if (listaDistribuciones.Count == 0)
        {
            <div class="alert alert-info mb-0">
                <i class="bi bi-info-circle me-2"></i>No hay distribuciones registradas.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Presupuesto Padre</th>
                            <th>Proyecto Hijo</th>
                            <th>Monto Asignado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var d in listaDistribuciones)
                        {
                            <tr>
                                <td>@d.Id</td>
                                <td>@GetPresupuestoNombre(d.IdPresupuestoPadre)</td>
                                <td>@GetProyectoNombre(d.IdProyectoHijo)</td>
                                <td>@d.MontoAsignado.ToString("C")</td>
                                <td>
                                    <button class="btn btn-sm btn-outline-primary" @onclick="@(() => CargarEnFormulario(d))">
                                        <i class="bi bi-upload"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

@code {
    private List<DistribucionPresupuesto> listaDistribuciones = new();
    private List<Presupuesto> listaPresupuestos = new();
    private List<Proyecto> listaProyectos = new();

    private DistribucionPresupuesto distribucionActual = new();
    private int idBusqueda;
    private bool existeDistribucion = false;
    private string mensaje = "";
    private string claseAviso = "alert alert-info";
    private bool cargando = false;
    private const string urlBaseApi = "api/distribucionpresupuesto";

    protected override async Task OnInitializedAsync()
    {
        await CargarOpcionesRelacionadas();
        await CargarDistribuciones();
    }

    private async Task CargarOpcionesRelacionadas()
    {
        try
        {
            var cliente = fabricaHttp.CreateClient("ApiDistribucionPresupuesto");
            listaPresupuestos = (await cliente.GetFromJsonAsync<RespuestaApi<List<Presupuesto>>>("api/presupuesto"))?.Datos ?? new();
            listaProyectos = (await cliente.GetFromJsonAsync<RespuestaApi<List<Proyecto>>>("api/proyecto"))?.Datos ?? new();
        }
        catch { }
    }

    private async Task CargarDistribuciones()
    {
        try
        {
            cargando = true;
            var cliente = fabricaHttp.CreateClient("ApiDistribucionPresupuesto");
            var resp = await cliente.GetFromJsonAsync<RespuestaApi<List<DistribucionPresupuesto>>>(urlBaseApi);
            listaDistribuciones = resp?.Datos ?? new();
            mensaje = $"Se cargaron {listaDistribuciones.Count} distribución(es).";
            claseAviso = "alert alert-success";
        }
        catch (Exception ex)
        {
            mensaje = $"Error al listar: {ex.Message}";
            claseAviso = "alert alert-danger";
        }
        finally { cargando = false; }
    }

    private async Task BuscarPorId()
    {
        if (idBusqueda == 0)
        {
            mensaje = "Debe indicar un ID válido.";
            claseAviso = "alert alert-warning";
            return;
        }

        try
        {
            var cliente = fabricaHttp.CreateClient("ApiDistribucionPresupuesto");
            var ruta = $"{urlBaseApi}/id/{idBusqueda}";
            var resp = await cliente.GetFromJsonAsync<RespuestaApi<List<DistribucionPresupuesto>>>(ruta);

            if (resp?.Datos is null || !resp.Datos.Any())
            {
                mensaje = $"No se encontró una distribución con ID {idBusqueda}.";
                claseAviso = "alert alert-warning";
                existeDistribucion = false;
                distribucionActual = new();
                return;
            }

            distribucionActual = resp.Datos.First();
            existeDistribucion = true;
            mensaje = "Distribución cargada.";
            claseAviso = "alert alert-success";
        }
        catch (Exception ex)
        {
            mensaje = $"Error al buscar: {ex.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task GuardarSegunEstado()
    {
        if (existeDistribucion)
            await ActualizarDistribucion();
        else
            await CrearDistribucion();
    }

    private async Task CrearDistribucion()
    {
        try
        {
            var cliente = fabricaHttp.CreateClient("ApiDistribucionPresupuesto");
            var payload = new
            {
                IdPresupuestoPadre = distribucionActual.IdPresupuestoPadre,
                IdProyectoHijo = distribucionActual.IdProyectoHijo,
                MontoAsignado = distribucionActual.MontoAsignado
            };

            var resp = await cliente.PostAsJsonAsync(urlBaseApi, payload);
            if (resp.IsSuccessStatusCode)
            {
                mensaje = "Distribución creada correctamente.";
                claseAviso = "alert alert-success";
                await CargarDistribuciones();
                LimpiarFormulario();
            }
            else
            {
                mensaje = $"Error al crear: {await resp.Content.ReadAsStringAsync()}";
                claseAviso = "alert alert-danger";
            }
        }
        catch (Exception ex)
        {
            mensaje = $"Error al crear: {ex.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task ActualizarDistribucion()
    {
        try
        {
            var cliente = fabricaHttp.CreateClient("ApiDistribucionPresupuesto");
            var ruta = $"{urlBaseApi}/id/{distribucionActual.Id}";
            var payload = new
            {
                IdPresupuestoPadre = distribucionActual.IdPresupuestoPadre,
                IdProyectoHijo = distribucionActual.IdProyectoHijo,
                MontoAsignado = distribucionActual.MontoAsignado
            };

            var resp = await cliente.PutAsJsonAsync(ruta, payload);
            if (resp.IsSuccessStatusCode)
            {
                mensaje = "Distribución actualizada correctamente.";
                claseAviso = "alert alert-success";
                await CargarDistribuciones();
            }
            else
            {
                mensaje = $"Error al actualizar: {await resp.Content.ReadAsStringAsync()}";
                claseAviso = "alert alert-danger";
            }
        }
        catch (Exception ex)
        {
            mensaje = $"Error al actualizar: {ex.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task ConfirmarEliminar()
    {
        if (distribucionActual.Id == 0) return;
        bool confirmado = await JS.InvokeAsync<bool>("confirm", $"¿Eliminar la distribución #{distribucionActual.Id}?");
        if (confirmado)
            await EliminarDistribucion(distribucionActual.Id);
    }

    private async Task EliminarDistribucion(int id)
    {
        try
        {
            var cliente = fabricaHttp.CreateClient("ApiDistribucionPresupuesto");
            var ruta = $"{urlBaseApi}/id/{id}";
            var resp = await cliente.DeleteAsync(ruta);

            if (resp.IsSuccessStatusCode)
            {
                mensaje = "Distribución eliminada correctamente.";
                claseAviso = "alert alert-success";
                await CargarDistribuciones();
                LimpiarFormulario();
            }
            else
            {
                mensaje = $"Error al eliminar: {await resp.Content.ReadAsStringAsync()}";
                claseAviso = "alert alert-danger";
            }
        }
        catch (Exception ex)
        {
            mensaje = $"Error al eliminar: {ex.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task ProbarConexion()
    {
        try
        {
            var cliente = fabricaHttp.CreateClient("ApiDistribucionPresupuesto");
            var resp = await cliente.GetAsync(urlBaseApi);
            mensaje = resp.IsSuccessStatusCode ? "Conexión OK." : $"Respuesta {(int)resp.StatusCode}";
            claseAviso = resp.IsSuccessStatusCode ? "alert alert-success" : "alert alert-warning";
        }
        catch (Exception ex)
        {
            mensaje = $"Error de conexión: {ex.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private void CargarEnFormulario(DistribucionPresupuesto d)
    {
        distribucionActual = new DistribucionPresupuesto
        {
            Id = d.Id,
            IdPresupuestoPadre = d.IdPresupuestoPadre,
            IdProyectoHijo = d.IdProyectoHijo,
            MontoAsignado = d.MontoAsignado
        };
        existeDistribucion = true;
        mensaje = "Distribución cargada.";
        claseAviso = "alert alert-info";
    }

    private void LimpiarFormulario()
    {
        distribucionActual = new DistribucionPresupuesto();
        existeDistribucion = false;
        mensaje = "";
    }

    private string GetPresupuestoNombre(int id)
    {
        var presupuesto = listaPresupuestos.FirstOrDefault(x => x.Id == id);
        return presupuesto != null
            ? string.Format(CultureInfo.CurrentCulture, "{0:C}", presupuesto.MontoAprobado)
            : $"#{id}";
    }

    private string GetProyectoNombre(int id)
        => listaProyectos.FirstOrDefault(x => x.Id == id)?.Titulo ?? $"#{id}";
}