@page "/distribucion-presupuesto"
@using FrontendBlazorApi.Models
@using FrontendBlazorApi.Servicios
@using System.Globalization
@inherits PaginaAutenticada
@inject ServicioApiGenerico servicioApi
@inject IJSRuntime JS
@rendermode InteractiveServer

<PageTitle>Gestión de Distribución de Presupuestos</PageTitle>

<!-- ENCABEZADO PRINCIPAL -->
<div class="d-flex align-items-center mb-3">
    <i class="bi bi-wallet2 fs-3 text-primary me-2"></i>
    <h3 class="mb-0 fw-bold">Gestión de Distribución de Presupuestos</h3>
</div>

<!-- MENSAJE DE ALERTA -->
@if (!string.IsNullOrWhiteSpace(mensaje))
{
    <div class="@claseAviso shadow-sm mb-3" role="alert">
        <i class="bi bi-info-circle-fill me-2"></i>@mensaje
    </div>
}

<!-- BLOQUE FORMULARIO -->
<div class="card border-primary shadow-sm mb-4">
    <div class="card-header bg-primary text-white fw-bold">
        <i class="bi bi-pencil-square me-2"></i>Formulario de Distribución de Presupuesto
    </div>

    <div class="card-body">
        <!-- BOTONES DE ACCIÓN -->
        <div class="d-flex flex-wrap gap-2 mb-3">
            <button class="btn btn-outline-secondary" @onclick="ProbarConexion">
                <i class="bi bi-wifi"></i>
            </button>
            <button class="btn btn-outline-primary" @onclick="CargarDistribuciones">
                <i class="bi bi-list"></i>
            </button>
            <button class="btn btn-outline-dark" @onclick="LimpiarFormulario">
                <i class="bi bi-eraser"></i>
            </button>
        </div>

        <!-- BUSQUEDA POR ID -->
        <div class="input-group mb-4">
            <span class="input-group-text"><i class="bi bi-search"></i></span>
            <InputNumber class="form-control" placeholder="Ingrese ID de distribución" @bind-Value="idBusqueda" />
            <button class="btn btn-secondary" @onclick="BuscarPorId">
                <i class="bi bi-arrow-right-circle"></i>
            </button>
        </div>

        <!-- FORMULARIO PRINCIPAL -->
        <EditForm Model="distribucionActual" OnValidSubmit="GuardarSegunEstado">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Presupuesto Padre *</label>
                    <InputSelect TValue="int" class="form-select" @bind-Value="distribucionActual.IdPresupuestoPadre">
                        <option value="0">-- Seleccione --</option>
                        @foreach (var p in listaPresupuestos)
                        {
                            <option value="@p.Id">@p.ProyectoTitulo</option>
                        }
                    </InputSelect>
                    <ValidationMessage For="@(() => distribucionActual.IdPresupuestoPadre)" />
                </div>

                <div class="col-md-4">
                    <label class="form-label">Proyecto Hijo *</label>
                    <InputSelect TValue="int" class="form-select" @bind-Value="distribucionActual.IdProyectoHijo">
                        <option value="0">-- Seleccione --</option>
                        @foreach (var pr in listaProyectos)
                        {
                            <option value="@pr.Id">@pr.Titulo</option>
                        }
                    </InputSelect>
                    <ValidationMessage For="@(() => distribucionActual.IdProyectoHijo)" />
                </div>

                <div class="col-md-4">
                    <label class="form-label">Monto Asignado *</label>
                    <InputNumber class="form-control" @bind-Value="distribucionActual.MontoAsignado" />
                    <ValidationMessage For="@(() => distribucionActual.MontoAsignado)" />
                </div>
            </div>

            <div class="mt-4 d-flex flex-wrap gap-2">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i>
                </button>
                <button type="button" class="btn btn-warning" @onclick="ActualizarDistribucion" disabled="@(!existeDistribucion)">
                    <i class="bi bi-arrow-clockwise"></i>
                </button>
                <button type="button" class="btn btn-danger" @onclick="ConfirmarEliminar" disabled="@(!existeDistribucion)">
                    <i class="bi bi-trash"></i>
                </button>
            </div>
        </EditForm>
    </div>
</div>

<!-- BLOQUE LISTA -->
<div class="card border-primary shadow-sm">
    <div class="card-header bg-primary text-white fw-bold">
        <i class="bi bi-table me-2"></i>Lista de Distribuciones de Presupuesto
    </div>

    <div class="card-body">
        @if (cargando)
        {
            <p><em><i class="bi bi-arrow-repeat"></i> Cargando distribuciones...</em></p>
        }
        else if (listaDistribuciones.Count == 0)
        {
            <div class="alert alert-info mb-0">
                <i class="bi bi-info-circle me-2"></i>No hay distribuciones registradas.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Presupuesto Padre</th>
                            <th>Proyecto Hijo</th>
                            <th>Monto Asignado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var d in listaDistribuciones)
                        {
                            <tr>
                                <td>@d.Id</td>
                                <td>@GetPresupuestoNombre(d.IdPresupuestoPadre)</td>
                                <td>@GetProyectoNombre(d.IdProyectoHijo)</td>
                                <td>@d.MontoAsignado.ToString("C")</td>
                                <td>
                                    <button class="btn btn-sm btn-outline-primary" @onclick="@(() => CargarEnFormulario(d))">
                                        <i class="bi bi-upload"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

@code {
    private List<DistribucionPresupuesto> listaDistribuciones = new();
    private List<Presupuesto> listaPresupuestos = new();
    private List<Proyecto> listaProyectos = new();
    private DistribucionPresupuesto distribucionActual = new();
    private int idBusqueda;
    private bool cargando = false;
    private bool existeDistribucion = false;
    private string mensaje = "";
    private string claseAviso = "alert alert-info";
    private const string urlBaseApi = "api/distribucionpresupuesto";

    protected override async Task OnInitializedAsync()
    {
        await CargarOpcionesRelacionadas();
        await CargarDistribuciones();
    }

    private async Task CargarOpcionesRelacionadas()
    {
        try
        {
            listaPresupuestos = await servicioApi.ObtenerTodosAsync<Presupuesto>("presupuesto");
            listaProyectos = await servicioApi.ObtenerTodosAsync<Proyecto>("proyecto");
        }
        catch
        {
            listaPresupuestos = new();
            listaProyectos = new();
        }
    }

    private async Task CargarDistribuciones()
    {
        try
        {
            cargando = true;
            listaDistribuciones = await servicioApi.ObtenerTodosAsync<DistribucionPresupuesto>("distribucionpresupuesto");
            mensaje = $"Se cargaron {listaDistribuciones.Count} distribución(es).";
            claseAviso = "alert alert-success";
        }
        catch (Exception ex)
        {
            mensaje = $"Error al listar distribuciones: {ex.Message}";
            claseAviso = "alert alert-danger";
        }
        finally { cargando = false; }
    }

    private async Task BuscarPorId()
    {
        if (idBusqueda == 0)
        {
            mensaje = "Debe indicar un ID válido.";
            claseAviso = "alert alert-warning";
            return;
        }

        try
        {
            var encontrado = await servicioApi.ObtenerPorClaveAsync<DistribucionPresupuesto>("distribucionpresupuesto", "id", idBusqueda);

            if (encontrado == null)
            {
                mensaje = $"No se encontró una distribución con ID {idBusqueda}.";
                claseAviso = "alert alert-warning";
                existeDistribucion = false;
                distribucionActual = new();
                return;
            }

            distribucionActual = encontrado;
            existeDistribucion = true;
            mensaje = "Distribución cargada.";
            claseAviso = "alert alert-success";
        }
        catch (Exception ex)
        {
            mensaje = $"Error al buscar: {ex.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task GuardarSegunEstado()
    {
        if (existeDistribucion)
            await ActualizarDistribucion();
        else
            await CrearDistribucion();
    }

    private async Task CrearDistribucion()
    {
        try
        {
            await servicioApi.CrearAsync("distribucionpresupuesto", distribucionActual);

            mensaje = "Distribución creada correctamente.";
            claseAviso = "alert alert-success";
            await CargarDistribuciones();
            LimpiarFormulario();
        }
        catch (Exception ex)
        {
            mensaje = $"Error al crear: {ex.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task ActualizarDistribucion()
    {
        try
        {
            await servicioApi.ActualizarAsync("distribucionpresupuesto", "id", distribucionActual.Id, distribucionActual);

            mensaje = "Distribución actualizada correctamente.";
            claseAviso = "alert alert-success";
            await CargarDistribuciones();
        }
        catch (Exception ex)
        {
            mensaje = $"Error al actualizar: {ex.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task ConfirmarEliminar()
    {
        if (distribucionActual.Id == 0) return;
        bool confirmado = await JS.InvokeAsync<bool>("confirm", $"¿Seguro que desea eliminar la distribución {distribucionActual.Id}?");
        if (confirmado)
            await EliminarDistribucion(distribucionActual.Id);
    }

    private async Task EliminarDistribucion(int id)
    {
        try
        {
            await servicioApi.EliminarAsync("distribucionpresupuesto", "id", id);

            mensaje = "Distribución eliminada correctamente.";
            claseAviso = "alert alert-success";
            await CargarDistribuciones();
            LimpiarFormulario();
        }
        catch (Exception ex)
        {
            mensaje = $"Error al eliminar: {ex.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private void CargarEnFormulario(DistribucionPresupuesto dist)
    {
        distribucionActual = new DistribucionPresupuesto
        {
            Id = dist.Id,
            IdPresupuestoPadre = dist.IdPresupuestoPadre,
            IdProyectoHijo = dist.IdProyectoHijo,
            MontoAsignado = dist.MontoAsignado
        };
        existeDistribucion = true;
        mensaje = "Distribución cargada.";
        claseAviso = "alert alert-info";
    }

    private void LimpiarFormulario()
    {
        distribucionActual = new();
        existeDistribucion = false;
        mensaje = "";
    }

    private string GetPresupuestoNombre(int id)
        => listaPresupuestos.FirstOrDefault(p => p.Id == id)?.ProyectoTitulo ?? "—";

    private string GetProyectoNombre(int id)
        => listaProyectos.FirstOrDefault(p => p.Id == id)?.Titulo ?? "—";

    private async Task ProbarConexion()
    {
        try
        {
            await servicioApi.ObtenerTodosAsync<DistribucionPresupuesto>("distribucionpresupuesto");
            mensaje = "Conexión OK.";
            claseAviso = "alert alert-success";
        }
        catch (Exception ex)
        {
            mensaje = $"Error de conexión: {ex.Message}";
            claseAviso = "alert alert-danger";
        }
    }

