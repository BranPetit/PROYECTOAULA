@page "/metas-estrategicas"
@using System.ComponentModel.DataAnnotations
@using FrontendBlazorApi.Models
@using FrontendBlazorApi.Servicios
@inherits PaginaAutenticada
@inject ServicioApiGenerico servicioApi
@inject IJSRuntime JS
@rendermode InteractiveServer

<PageTitle>Gestión de Metas Estratégicas</PageTitle>

<!-- ENCABEZADO PRINCIPAL -->
<div class="d-flex align-items-center mb-3">
    <i class="bi bi-flag fs-3 text-primary me-2"></i>
    <h3 class="mb-0 fw-bold">Gestión de Metas Estratégicas</h3>
</div>

@if (!string.IsNullOrWhiteSpace(mensaje))
{
    <div class="@claseAviso shadow-sm mb-3" role="alert">
        <i class="bi bi-info-circle-fill me-2"></i>@mensaje
    </div>
}

<!-- BLOQUE FORMULARIO -->
<div class="card border-primary shadow-sm mb-4">
    <div class="card-header bg-primary text-white fw-bold">
        <i class="bi bi-pencil-square me-2"></i>Formulario de Meta Estratégica
    </div>

    <div class="card-body">
        <div class="d-flex flex-wrap gap-2 mb-3">
            <button class="btn btn-outline-secondary" @onclick="ProbarConexion">
                <i class="bi bi-wifi"></i>
            </button>
            <button class="btn btn-outline-primary" @onclick="CargarMetas">
                <i class="bi bi-list"></i>
            </button>
            <button class="btn btn-outline-dark" @onclick="LimpiarFormulario">
                <i class="bi bi-eraser"></i>
            </button>
        </div>

        <div class="input-group mb-4">
            <span class="input-group-text"><i class="bi bi-search"></i></span>
            <InputNumber class="form-control" placeholder="Ingrese ID de meta" @bind-Value="idBusqueda" />
            <button class="btn btn-secondary" @onclick="BuscarPorId">
                <i class="bi bi-arrow-right-circle"></i>
            </button>
        </div>

        <EditForm Model="metaActual" OnValidSubmit="GuardarSegunEstado">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Objetivo Estratégico *</label>
                    <InputSelect class="form-select" @bind-Value="metaActual.IdObjetivo">
                        <option value="0">-- Seleccione --</option>
                        @foreach (var o in listaObjetivos)
                        {
                            <option value="@o.Id">@o.Titulo</option>
                        }
                    </InputSelect>
                    <ValidationMessage For="@(() => metaActual.IdObjetivo)" />
                </div>

                <div class="col-md-4">
                    <label class="form-label">Título *</label>
                    <InputText class="form-control" @bind-Value="metaActual.Titulo" />
                    <ValidationMessage For="@(() => metaActual.Titulo)" />
                </div>

                <div class="col-md-12">
                    <label class="form-label">Descripción</label>
                    <InputTextArea class="form-control" @bind-Value="metaActual.Descripcion" rows="3" />
                </div>
            </div>

            <div class="mt-4 d-flex flex-wrap gap-2">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i>
                </button>
                <button type="button" class="btn btn-warning" @onclick="ActualizarMeta" disabled="@(!existeMeta)">
                    <i class="bi bi-arrow-clockwise"></i>
                </button>
                <button type="button" class="btn btn-danger" @onclick="ConfirmarEliminar" disabled="@(!existeMeta)">
                    <i class="bi bi-trash"></i>
                </button>
            </div>
        </EditForm>
    </div>
</div>

<!-- BLOQUE LISTA -->
<div class="card border-primary shadow-sm">
    <div class="card-header bg-primary text-white fw-bold">
        <i class="bi bi-table me-2"></i>Lista de Metas Estratégicas
    </div>

    <div class="card-body">
        @if (cargando)
        {
            <p><em><i class="bi bi-arrow-repeat"></i> Cargando metas...</em></p>
        }
        else if (listaMetas.Count == 0)
        {
            <div class="alert alert-info mb-0">
                <i class="bi bi-info-circle me-2"></i>No hay metas registradas.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Título</th>
                            <th>Objetivo Estratégico</th>
                            <th>Descripción</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var m in listaMetas)
                        {
                            <tr>
                                <td>@m.Id</td>
                                <td>@m.Titulo</td>
                                <td>@(GetObjetivoNombre(m.IdObjetivo))</td>
                                <td>@m.Descripcion</td>
                                <td>
                                    <button class="btn btn-sm btn-outline-primary" @onclick="@(() => CargarEnFormulario(m))">
                                        <i class="bi bi-upload"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

@code {
    private List<MetaEstrategica> listaMetas = new();
    private List<ObjetivoEstrategico> listaObjetivos = new();
    private MetaEstrategica metaActual = new();
    private int idBusqueda;
    private bool existeMeta = false;
    private string textoBotonGuardar = "Crear";
    private string mensaje = "";
    private string claseAviso = "alert alert-info";
    private bool cargando = false;

    protected override async Task OnInitializedAsync()
    {
        await CargarOpcionesRelacionadas();
        await CargarMetas();
    }

    private async Task CargarOpcionesRelacionadas()
    {
        try
        {
            listaObjetivos = await servicioApi.ObtenerTodosAsync<ObjetivoEstrategico>("objetivoestrategico");
        }
        catch { listaObjetivos = new(); }
    }

    private async Task CargarMetas()
    {
        try
        {
            cargando = true;
            listaMetas = await servicioApi.ObtenerTodosAsync<MetaEstrategica>("metaestrategica");
            mensaje = $"Se cargaron {listaMetas.Count} meta(s).";
            claseAviso = "alert alert-success";
        }
        catch (Exception ex)
        {
            mensaje = $"Error al listar metas: {ex.Message}";
            claseAviso = "alert alert-danger";
        }
        finally { cargando = false; }
    }

    private async Task BuscarPorId()
    {
        if (idBusqueda == 0)
        {
            mensaje = "Debe indicar un ID válido.";
            claseAviso = "alert alert-warning";
            return;
        }

        try
        {
            var encontrado = await servicioApi.ObtenerPorClaveAsync<MetaEstrategica>("metaestrategica", "id", idBusqueda);

            if (encontrado == null)
            {
                mensaje = $"No se encontró una meta con ID {idBusqueda}.";
                claseAviso = "alert alert-warning";
                existeMeta = false;
                textoBotonGuardar = "Crear";
                metaActual = new MetaEstrategica();
                return;
            }

            metaActual = encontrado;
            existeMeta = true;
            textoBotonGuardar = "Actualizar";
            mensaje = "Meta cargada.";
            claseAviso = "alert alert-success";
        }
        catch (Exception ex)
        {
            mensaje = $"Error al buscar: {ex.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task GuardarSegunEstado()
    {
        if (existeMeta)
            await ActualizarMeta();
        else
            await CrearMeta();
    }

    private async Task CrearMeta()
    {
        try
        {
            await servicioApi.CrearAsync("metaestrategica", metaActual);

            mensaje = "Meta creada correctamente.";
            claseAviso = "alert alert-success";
            await CargarMetas();
            LimpiarFormulario();
        }
        catch (Exception ex)
        {
            mensaje = $"Error al crear: {ex.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task ActualizarMeta()
    {
        try
        {
            await servicioApi.ActualizarAsync("metaestrategica", "id", metaActual.Id, metaActual);

            mensaje = "Meta actualizada correctamente.";
            claseAviso = "alert alert-success";
            await CargarMetas();
        }
        catch (Exception ex)
        {
            mensaje = $"Error al actualizar: {ex.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task ConfirmarEliminar()
    {
        if (metaActual.Id == 0) return;
        bool confirmado = await JS.InvokeAsync<bool>("confirm", $"¿Seguro que desea eliminar la meta '{metaActual.Titulo}' (ID {metaActual.Id})?");
        if (confirmado)
            await EliminarMeta(metaActual.Id);
    }

    private async Task EliminarMeta(int id)
    {
        try
        {
            await servicioApi.EliminarAsync("metaestrategica", "id", id);

            mensaje = "Meta eliminada correctamente.";
            claseAviso = "alert alert-success";
            await CargarMetas();
            LimpiarFormulario();
        }
        catch (Exception ex)
        {
            mensaje = $"Error al eliminar: {ex.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task ProbarConexion()
    {
        try
        {
            await servicioApi.ObtenerTodosAsync<MetaEstrategica>("metaestrategica");
            mensaje = "Conexión OK.";
            claseAviso = "alert alert-success";
        }
        catch (Exception ex)
        {
            mensaje = $"Error de conexión: {ex.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private void CargarEnFormulario(MetaEstrategica m)
    {
        metaActual = new MetaEstrategica
        {
            Id = m.Id,
            IdObjetivo = m.IdObjetivo,
            Titulo = m.Titulo,
            Descripcion = m.Descripcion
        };
        existeMeta = true;
        textoBotonGuardar = "Actualizar";
        mensaje = "Meta cargada.";
        claseAviso = "alert alert-info";
    }

    private void LimpiarFormulario()
    {
        metaActual = new MetaEstrategica();
        existeMeta = false;
        textoBotonGuardar = "Crear";
        mensaje = "";
    }

    private string GetObjetivoNombre(int id)
        => listaObjetivos.FirstOrDefault(x => x.Id == id)?.Titulo ?? $"#{id}";
}