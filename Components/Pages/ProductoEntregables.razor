@page "/productoentregables"
@using System.Net.Http.Json
@using FrontendBlazorApi.Models
@inject IHttpClientFactory fabricaHttp
@inject IJSRuntime JS
@rendermode InteractiveServer

<PageTitle>Gestión Producto Entregable</PageTitle>

<!-- ENCABEZADO PRINCIPAL -->
<div class="d-flex align-items-center mb-3">
    <i class="bi bi-box-seam fs-3 text-primary me-2"></i>
    <h3 class="mb-0 fw-bold">Gestión Producto–Entregable</h3>
</div>

@if (!string.IsNullOrWhiteSpace(mensaje))
{
    <div class="@claseAviso shadow-sm mb-3" role="alert">
        <i class="bi bi-info-circle-fill me-2"></i>@mensaje
    </div>
}

<!-- BLOQUE FORMULARIO -->
<div class="card border-primary shadow-sm mb-4">
    <div class="card-header bg-primary text-white fw-bold">
        <i class="bi bi-pencil-square me-2"></i>Formulario de Asociación
    </div>

    <div class="card-body">
        <div class="d-flex flex-wrap gap-2 mb-3">
            <button class="btn btn-outline-secondary" @onclick="ProbarConexion">
                <i class="bi bi-wifi"></i>
            </button>
            <button class="btn btn-outline-primary" @onclick="CargarAsociaciones">
                <i class="bi bi-list"></i>
            </button>
            <button class="btn btn-outline-dark" @onclick="LimpiarFormulario">
                <i class="bi bi-eraser"></i>
            </button>
        </div>

        <EditForm Model="asociacionActual" OnValidSubmit="GuardarSegunEstado">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">Producto *</label>
                    <InputSelect class="form-select" @bind-Value="asociacionActual.IdProducto">
                        <option value="0">-- Seleccione Producto --</option>
                        @foreach (var p in listaProductos)
                        {
                            <option value="@p.Id">@p.Titulo</option>
                        }
                    </InputSelect>
                    <ValidationMessage For="@(() => asociacionActual.IdProducto)" />
                </div>

                <div class="col-md-6">
                    <label class="form-label">Entregable *</label>
                    <InputSelect class="form-select" @bind-Value="asociacionActual.IdEntregable">
                        <option value="0">-- Seleccione Entregable --</option>
                        @foreach (var e in listaEntregables)
                        {
                            <option value="@e.Id">@e.Titulo</option>
                        }
                    </InputSelect>
                    <ValidationMessage For="@(() => asociacionActual.IdEntregable)" />
                </div>

                <div class="col-md-6">
                    <label class="form-label">Fecha Asociación</label>
                    <InputDate class="form-control" @bind-Value="asociacionActual.FechaAsociacion" />
                </div>
            </div>

            <div class="mt-4 d-flex flex-wrap gap-2">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i>
                </button>
                <button type="button" class="btn btn-warning" @onclick="ActualizarAsociacion" disabled="@(!existeAsociacion)">
                    <i class="bi bi-arrow-clockwise"></i>
                </button>
                <button type="button" class="btn btn-danger" @onclick="ConfirmarEliminar" disabled="@(!existeAsociacion)">
                    <i class="bi bi-trash"></i>
                </button>
            </div>
        </EditForm>
    </div>
</div>

<!-- BLOQUE LISTA -->
<div class="card border-primary shadow-sm">
    <div class="card-header bg-primary text-white fw-bold">
        <i class="bi bi-table me-2"></i>Lista de Asociaciones
    </div>

    <div class="card-body">
        @if (cargando)
        {
            <p><em><i class="bi bi-arrow-repeat"></i> Cargando asociaciones...</em></p>
        }
        else if (listaAsociaciones.Count == 0)
        {
            <div class="alert alert-info mb-0">
                <i class="bi bi-info-circle me-2"></i>No hay asociaciones registradas.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Producto</th>
                            <th>Entregable</th>
                            <th>Fecha Asociación</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var a in listaAsociaciones)
                        {
                            <tr>
                                <td>@GetProductoTitulo(a.IdProducto)</td>
                                <td>@GetEntregableTitulo(a.IdEntregable)</td>
                                <td>@a.FechaAsociacion?.ToString("yyyy-MM-dd")</td>
                                <td>
                                    <button class="btn btn-sm btn-outline-primary" @onclick="@(() => CargarEnFormulario(a))">
                                        <i class="bi bi-upload"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

@code {
    private List<ProductoEntregable> listaAsociaciones = new();
    private List<Producto> listaProductos = new();
    private List<Entregable> listaEntregables = new();
    private ProductoEntregable asociacionActual = new();
    private bool existeAsociacion = false;
    private string mensaje = "";
    private string claseAviso = "alert alert-info";
    private bool cargando = false;
    private const string urlBaseApi = "api/productoentregable";

    protected override async Task OnInitializedAsync()
    {
        await CargarOpcionesRelacionadas();
        await CargarAsociaciones();
    }

    private async Task CargarOpcionesRelacionadas()
    {
        try
        {
            var cliente = fabricaHttp.CreateClient("ApiProducto");
            listaProductos = (await cliente.GetFromJsonAsync<RespuestaApi<List<Producto>>>("api/producto"))?.Datos ?? new();
            listaEntregables = (await cliente.GetFromJsonAsync<RespuestaApi<List<Entregable>>>("api/entregable"))?.Datos ?? new();
        }
        catch
        {
            listaProductos = new();
            listaEntregables = new();
        }
    }

    private async Task CargarAsociaciones()
    {
        try
        {
            cargando = true;
            var cliente = fabricaHttp.CreateClient("ApiProducto");
            var resp = await cliente.GetFromJsonAsync<RespuestaApi<List<ProductoEntregable>>>(urlBaseApi);
            listaAsociaciones = resp?.Datos ?? new();
            mensaje = $"Se cargaron {listaAsociaciones.Count} asociación(es).";
            claseAviso = "alert alert-success";
        }
        catch (Exception ex)
        {
            mensaje = $"Error al listar asociaciones: {ex.Message}";
            claseAviso = "alert alert-danger";
        }
        finally { cargando = false; }
    }

    private async Task GuardarSegunEstado()
    {
        if (existeAsociacion)
            await ActualizarAsociacion();
        else
            await CrearAsociacion();
    }

    private async Task CrearAsociacion()
    {
        try
        {
            var cliente = fabricaHttp.CreateClient("ApiProducto");
            var payload = new
            {
                IdProducto = asociacionActual.IdProducto,
                IdEntregable = asociacionActual.IdEntregable,
                FechaAsociacion = asociacionActual.FechaAsociacion
            };
            var resp = await cliente.PostAsJsonAsync(urlBaseApi, payload);

            if (resp.IsSuccessStatusCode)
            {
                mensaje = "Asociación creada correctamente.";
                claseAviso = "alert alert-success";
                await CargarAsociaciones();
                LimpiarFormulario();
            }
            else
            {
                mensaje = $"Error al crear: {await resp.Content.ReadAsStringAsync()}";
                claseAviso = "alert alert-danger";
            }
        }
        catch (Exception ex)
        {
            mensaje = $"Error al crear: {ex.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task ActualizarAsociacion()
    {
        try
        {
            var cliente = fabricaHttp.CreateClient("ApiProducto");
            var ruta = $"{urlBaseApi}/id/{asociacionActual.IdProducto}/{asociacionActual.IdEntregable}";
            var payload = new { FechaAsociacion = asociacionActual.FechaAsociacion };
            var resp = await cliente.PutAsJsonAsync(ruta, payload);

            if (resp.IsSuccessStatusCode)
            {
                mensaje = "Asociación actualizada correctamente.";
                claseAviso = "alert alert-success";
                await CargarAsociaciones();
            }
            else
            {
                mensaje = $"Error al actualizar: {await resp.Content.ReadAsStringAsync()}";
                claseAviso = "alert alert-danger";
            }
        }
        catch (Exception ex)
        {
            mensaje = $"Error al actualizar: {ex.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task ConfirmarEliminar()
    {
        if (asociacionActual.IdProducto == 0 || asociacionActual.IdEntregable == 0) return;
        bool confirmado = await JS.InvokeAsync<bool>("confirm", $"¿Eliminar relación Producto {GetProductoTitulo(asociacionActual.IdProducto)} con Entregable {GetEntregableTitulo(asociacionActual.IdEntregable)}?");
        if (confirmado)
            await EliminarAsociacion(asociacionActual.IdProducto, asociacionActual.IdEntregable);
    }

    private async Task EliminarAsociacion(int idProducto, int idEntregable)
    {
        try
        {
            var cliente = fabricaHttp.CreateClient("ApiProducto");
            var ruta = $"{urlBaseApi}/id/{idProducto}/{idEntregable}";
            var resp = await cliente.DeleteAsync(ruta);

            if (resp.IsSuccessStatusCode)
            {
                mensaje = "Asociación eliminada correctamente.";
                claseAviso = "alert alert-success";
                await CargarAsociaciones();
                LimpiarFormulario();
            }
            else
            {
                mensaje = $"Error al eliminar: {await resp.Content.ReadAsStringAsync()}";
                claseAviso = "alert alert-danger";
            }
        }
        catch (Exception ex)
        {
            mensaje = $"Error al eliminar: {ex.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task ProbarConexion()
    {
        try
        {
            var cliente = fabricaHttp.CreateClient("ApiProducto");
            var resp = await cliente.GetAsync(urlBaseApi);
            mensaje = resp.IsSuccessStatusCode ? "Conexión OK." : $"Respuesta {(int)resp.StatusCode}";
            claseAviso = resp.IsSuccessStatusCode ? "alert alert-success" : "alert alert-warning";
        }
        catch (Exception ex)
        {
            mensaje = $"Error de conexión: {ex.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private void CargarEnFormulario(ProductoEntregable a)
    {
        asociacionActual = new ProductoEntregable
        {
            IdProducto = a.IdProducto,
            IdEntregable = a.IdEntregable,
            FechaAsociacion = a.FechaAsociacion
        };
        existeAsociacion = true;
        mensaje = "Asociación cargada.";
        claseAviso = "alert alert-info";
    }

    private void LimpiarFormulario()
    {
        asociacionActual = new ProductoEntregable();
        existeAsociacion = false;
        mensaje = "";
    }

    private string GetProductoTitulo(int id)
        => listaProductos.FirstOrDefault(x => x.Id == id)?.Titulo ?? $"#{id}";

    private string GetEntregableTitulo(int id)
        => listaEntregables.FirstOrDefault(x => x.Id == id)?.Titulo ?? $"#{id}";
}