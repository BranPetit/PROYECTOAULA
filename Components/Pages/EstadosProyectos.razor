@page "/estado-proyecto"
@using System.ComponentModel.DataAnnotations
@using FrontendBlazorApi.Models
@using FrontendBlazorApi.Servicios
@inherits PaginaAutenticada
@inject ServicioApiGenerico servicioApi
@inject IJSRuntime JS
@rendermode InteractiveServer

<PageTitle>Gestión de Estados de Proyectos</PageTitle>

<!-- ENCABEZADO -->
<div class="d-flex align-items-center mb-3">
    <i class="bi bi-kanban fs-3 text-primary me-2"></i>
    <h3 class="mb-0 fw-bold">Gestión de Estados de Proyectos</h3>
</div>

@if (!string.IsNullOrWhiteSpace(mensaje))
{
    <div class="@claseAviso shadow-sm mb-3" role="alert">
        <i class="bi bi-info-circle-fill me-2"></i>@mensaje
    </div>
}

<!-- FORMULARIO -->
<div class="card border-primary shadow-sm mb-4">
    <div class="card-header bg-primary text-white fw-bold">
        <i class="bi bi-pencil-square me-2"></i>Formulario de Estado de Proyecto
    </div>

    <div class="card-body">
        <div class="d-flex flex-wrap gap-2 mb-3">
            <button class="btn btn-outline-secondary" @onclick="ProbarConexion"><i class="bi bi-wifi"></i></button>
            <button class="btn btn-outline-primary" @onclick="CargarEstadosProyectos"><i class="bi bi-list"></i></button>
            <button class="btn btn-outline-dark" @onclick="LimpiarFormulario"><i class="bi bi-eraser"></i></button>
        </div>

        <div class="input-group mb-4">
            <span class="input-group-text"><i class="bi bi-search"></i></span>
            <InputNumber class="form-control" placeholder="Ingrese ID de proyecto" @bind-Value="idBusqueda" />
            <button class="btn btn-secondary" @onclick="BuscarPorId"><i class="bi bi-arrow-right-circle"></i></button>
        </div>

        <EditForm Model="Estado_ProyectoActual" OnValidSubmit="GuardarSegunEstado">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">Proyecto *</label>
                    <InputSelect class="form-select" @bind-Value="Estado_ProyectoActual.IdProyecto">
                        <option value="0">-- Seleccione un proyecto --</option>
                        @foreach (var p in listaProyectos)
                        {
                            <option value="@p.Id">@p.Titulo</option>
                        }
                    </InputSelect>
                    <ValidationMessage For="@(() => Estado_ProyectoActual.IdProyecto)" />
                </div>

                <div class="col-md-6">
                    <label class="form-label">Estado *</label>
                    <InputSelect class="form-select" @bind-Value="Estado_ProyectoActual.IdEstado">
                        <option value="0">-- Seleccione un estado --</option>
                        @foreach (var e in listaEstados)
                        {
                            <option value="@e.Id">@e.Nombre</option>
                        }
                    </InputSelect>
                    <ValidationMessage For="@(() => Estado_ProyectoActual.IdEstado)" />
                </div>
            </div>

            <div class="mt-4 d-flex flex-wrap gap-2">
                <button type="submit" class="btn btn-success"><i class="bi bi-plus-circle"></i></button>
                <button type="button" class="btn btn-warning" @onclick="ActualizarEstado_Proyecto" disabled="@(!existeRegistro)">
                    <i class="bi bi-arrow-clockwise"></i>
                </button>
                <button type="button" class="btn btn-danger" @onclick="ConfirmarEliminar" disabled="@(!existeRegistro)">
                    <i class="bi bi-trash"></i>
                </button>
            </div>
        </EditForm>
    </div>
</div>

<!-- LISTADO -->
<div class="card border-primary shadow-sm">
    <div class="card-header bg-primary text-white fw-bold">
        <i class="bi bi-table me-2"></i>Lista de Estados de Proyectos
    </div>

    <div class="card-body">
        @if (cargando)
        {
            <p><em><i class="bi bi-arrow-repeat"></i> Cargando registros...</em></p>
        }
        else if (listaEstado_Proyecto.Count == 0)
        {
            <div class="alert alert-info mb-0">
                <i class="bi bi-info-circle me-2"></i>No hay registros.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Proyecto</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ep in listaEstado_Proyecto)
                        {
                            <tr>
                                <td>@(GetProyectoNombre(ep.IdProyecto))</td>
                                <td>@(GetEstadoNombre(ep.IdEstado))</td>
                                <td>
                                    <button class="btn btn-sm btn-outline-primary" @onclick="@(() => CargarEnFormulario(ep))">
                                        <i class="bi bi-upload"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

@code {
    private List<Estado_Proyecto> listaEstado_Proyecto = new();
    private List<Proyecto> listaProyectos = new();
    private List<Estado> listaEstados = new();
    private Estado_Proyecto Estado_ProyectoActual { get; set; } = new();
    private int idBusqueda;
    private bool existeRegistro = false;
    private string mensaje = "";
    private string claseAviso = "alert alert-info";
    private bool cargando = false;

    protected override async Task OnInitializedAsync()
    {
        await CargarOpcionesRelacionadas();
        await CargarEstadosProyectos();
    }

    private async Task CargarOpcionesRelacionadas()
    {
        try
        {
            listaProyectos = await servicioApi.ObtenerTodosAsync<Proyecto>("proyecto");
            listaEstados = await servicioApi.ObtenerTodosAsync<Estado>("estado");
        }
        catch
        {
            listaProyectos = new();
            listaEstados = new();
        }
    }

    private async Task CargarEstadosProyectos()
    {
        try
        {
            cargando = true;
            listaEstado_Proyecto = await servicioApi.ObtenerTodosAsync<Estado_Proyecto>("Estado_Proyecto");
            mensaje = $"Se cargaron {listaEstado_Proyecto.Count} registro(s).";
            claseAviso = "alert alert-success";
        }
        catch (Exception ex)
        {
            mensaje = $"Error al listar: {ex.Message}";
            claseAviso = "alert alert-danger";
        }
        finally { cargando = false; }
    }

    private async Task BuscarPorId()
    {
        if (idBusqueda == 0)
        {
            mensaje = "Debe indicar un ID válido.";
            claseAviso = "alert alert-warning";
            return;
        }

        try
        {
            var encontrado = await servicioApi.ObtenerPorClaveAsync<Estado_Proyecto>("Estado_Proyecto", "id", idBusqueda);

            if (encontrado == null)
            {
                mensaje = $"No se encontró un registro con ID Proyecto {idBusqueda}.";
                claseAviso = "alert alert-warning";
                existeRegistro = false;
                Estado_ProyectoActual = new();
                return;
            }

            Estado_ProyectoActual = encontrado;
            existeRegistro = true;
            mensaje = "Registro cargado.";
            claseAviso = "alert alert-success";
        }
        catch (Exception ex)
        {
            mensaje = $"Error al buscar: {ex.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task GuardarSegunEstado()
    {
        if (existeRegistro)
            await ActualizarEstado_Proyecto();
        else
            await CrearEstado_Proyecto();
    }

    private async Task CrearEstado_Proyecto()
    {
        try
        {
            await servicioApi.CrearAsync("Estado_Proyecto", Estado_ProyectoActual);

            mensaje = "Registro creado correctamente.";
            claseAviso = "alert alert-success";
            await CargarEstadosProyectos();
            LimpiarFormulario();
        }
        catch (Exception ex)
        {
            mensaje = $"Error al crear: {ex.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task ActualizarEstado_Proyecto()
    {
        try
        {
            await servicioApi.ActualizarAsync("Estado_Proyecto", "id", Estado_ProyectoActual.IdProyecto, Estado_ProyectoActual);

            mensaje = "Registro actualizado correctamente.";
            claseAviso = "alert alert-success";
            await CargarEstadosProyectos();
        }
        catch (Exception ex)
        {
            mensaje = $"Error al actualizar: {ex.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task ConfirmarEliminar()
    {
        if (Estado_ProyectoActual.IdProyecto == 0) return;
        bool confirmado = await JS.InvokeAsync<bool>("confirm", $"¿Seguro que desea eliminar el registro del proyecto {Estado_ProyectoActual.IdProyecto}?");
        if (confirmado)
            await EliminarEstado_Proyecto(Estado_ProyectoActual.IdProyecto);
    }

    private async Task EliminarEstado_Proyecto(int id)
    {
        try
        {
            await servicioApi.EliminarAsync("Estado_Proyecto", "id", id);

            mensaje = "Registro eliminado correctamente.";
            claseAviso = "alert alert-success";
            await CargarEstadosProyectos();
            LimpiarFormulario();
        }
        catch (Exception ex)
        {
            mensaje = $"Error al eliminar: {ex.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task ProbarConexion()
    {
        try
        {
            await servicioApi.ObtenerTodosAsync<Estado_Proyecto>("Estado_Proyecto");
            mensaje = "Conexión OK.";
            claseAviso = "alert alert-success";
        }
        catch (Exception ex)
        {
            mensaje = $"Error de conexión: {ex.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private void CargarEnFormulario(Estado_Proyecto ep)
    {
        Estado_ProyectoActual = new Estado_Proyecto
        {
            IdProyecto = ep.IdProyecto,
            IdEstado = ep.IdEstado
        };
        existeRegistro = true;
        mensaje = "Registro cargado.";
        claseAviso = "alert alert-info";
    }

    private void LimpiarFormulario()
    {
        Estado_ProyectoActual = new Estado_Proyecto();
        existeRegistro = false;
        mensaje = "";
    }

    private string GetProyectoNombre(int id)
        => listaProyectos.FirstOrDefault(x => x.Id == id)?.Titulo ?? $"#{id}";

    private string GetEstadoNombre(int id)
        => listaEstados.FirstOrDefault(x => x.Id == id)?.Nombre ?? $"#{id}";
}