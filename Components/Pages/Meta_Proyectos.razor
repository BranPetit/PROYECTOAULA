@page "/meta-proyecto"
@using System.Net.Http.Json
@using FrontendBlazorApi.Models
@inject IHttpClientFactory fabricaHttp
@inject IJSRuntime JS
@rendermode InteractiveServer

<PageTitle>Gestión de Meta-Proyecto</PageTitle>

<!-- ENCABEZADO -->
<div class="d-flex align-items-center mb-3">
    <i class="bi bi-diagram-3 fs-3 text-primary me-2"></i>
    <h3 class="mb-0 fw-bold">Gestión de Asociación Meta - Proyecto</h3>
</div>

@if (!string.IsNullOrWhiteSpace(mensaje))
{
    <div class="@claseAviso shadow-sm mb-3" role="alert">
        <i class="bi bi-info-circle-fill me-2"></i>@mensaje
    </div>
}

<!-- FORMULARIO -->
<div class="card border-primary shadow-sm mb-4">
    <div class="card-header bg-primary text-white fw-bold">
        <i class="bi bi-pencil-square me-2"></i>Formulario de Asociación
    </div>

    <div class="card-body">
        <div class="d-flex flex-wrap gap-2 mb-3">
            <button class="btn btn-outline-secondary" @onclick="ProbarConexion"><i class="bi bi-wifi"></i></button>
            <button class="btn btn-outline-primary" @onclick="CargarAsociaciones"><i class="bi bi-list"></i></button>
            <button class="btn btn-outline-dark" @onclick="LimpiarFormulario"><i class="bi bi-eraser"></i></button>
        </div>

        <div class="input-group mb-4">
            <span class="input-group-text"><i class="bi bi-search"></i></span>
            <InputNumber class="form-control" placeholder="Ingrese ID de asociación" @bind-Value="idBusqueda" />
            <button class="btn btn-secondary" @onclick="BuscarPorId"><i class="bi bi-arrow-right-circle"></i></button>
        </div>

        <EditForm Model="asociacionActual" OnValidSubmit="GuardarSegunEstado">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="row g-3">
                <div class="col-md-5">
                    <label class="form-label">Meta Estratégica *</label>
                    <InputSelect class="form-select" @bind-Value="asociacionActual.IdMeta">
                        <option value="0">-- Seleccione --</option>
                        @foreach (var m in listaMetas)
                        {
                            <option value="@m.Id">@m.Titulo</option>
                        }
                    </InputSelect>
                    <ValidationMessage For="@(() => asociacionActual.IdMeta)" />
                </div>

                <div class="col-md-5">
                    <label class="form-label">Proyecto *</label>
                    <InputSelect class="form-select" @bind-Value="asociacionActual.IdProyecto">
                        <option value="0">-- Seleccione --</option>
                        @foreach (var p in listaProyectos)
                        {
                            <option value="@p.Id">@p.Titulo</option>
                        }
                    </InputSelect>
                    <ValidationMessage For="@(() => asociacionActual.IdProyecto)" />
                </div>

                <div class="col-md-2">
                    <label class="form-label">Fecha Asociación</label>
                    <InputDate class="form-control" @bind-Value="asociacionActual.FechaAsociacion" />
                </div>
            </div>

            <div class="mt-4 d-flex flex-wrap gap-2">
                <button type="submit" class="btn btn-primary"><i class="bi bi-plus-circle"></i></button>
                <button type="button" class="btn btn-warning" @onclick="ActualizarAsociacion" disabled="@(!existeAsociacion)">
                    <i class="bi bi-arrow-clockwise"></i>
                </button>
                <button type="button" class="btn btn-danger" @onclick="ConfirmarEliminar" disabled="@(!existeAsociacion)">
                    <i class="bi bi-trash"></i>
                </button>
            </div>
        </EditForm>
    </div>
</div>

<!-- LISTA -->
<div class="card border-primary shadow-sm">
    <div class="card-header bg-primary text-white fw-bold">
        <i class="bi bi-table me-2"></i>Lista de Asociaciones
    </div>

    <div class="card-body">
        @if (cargando)
        {
            <p><em><i class="bi bi-arrow-repeat"></i> Cargando asociaciones...</em></p>
        }
        else if (listaAsociaciones.Count == 0)
        {
            <div class="alert alert-info mb-0">
                <i class="bi bi-info-circle me-2"></i>No hay asociaciones registradas.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Meta Estratégica</th>
                            <th>Proyecto</th>
                            <th>Fecha Asociación</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var a in listaAsociaciones)
                        {
                            <tr>
                                <td>@a.Id</td>
                                <td>@GetMetaNombre(a.IdMeta)</td>
                                <td>@GetProyectoNombre(a.IdProyecto)</td>
                                <td>@(a.FechaAsociacion?.ToString("yyyy-MM-dd") ?? "-")</td>
                                <td>
                                    <button class="btn btn-sm btn-outline-primary" @onclick="@(() => CargarEnFormulario(a))">
                                        <i class="bi bi-upload"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

@code {
    private List<MetaProyecto> listaAsociaciones = new();
    private List<MetaEstrategica> listaMetas = new();
    private List<Proyecto> listaProyectos = new();

    private MetaProyecto asociacionActual = new();
    private int idBusqueda;
    private bool existeAsociacion = false;
    private string mensaje = "";
    private string claseAviso = "alert alert-info";
    private bool cargando = false;
    private const string urlBaseApi = "api/meta_proyecto";

    protected override async Task OnInitializedAsync()
    {
        await CargarOpcionesRelacionadas();
        await CargarAsociaciones();
    }

    private async Task CargarOpcionesRelacionadas()
    {
        try
        {
            var cliente = fabricaHttp.CreateClient("ApiMeta_Proyecto");
            listaMetas = (await cliente.GetFromJsonAsync<RespuestaApi<List<MetaEstrategica>>>("api/metaestrategica"))?.Datos ?? new();
            listaProyectos = (await cliente.GetFromJsonAsync<RespuestaApi<List<Proyecto>>>("api/proyecto"))?.Datos ?? new();
        }
        catch { }
    }

    private async Task CargarAsociaciones()
    {
        try
        {
            cargando = true;
            var cliente = fabricaHttp.CreateClient("ApiMeta_Proyecto");
            var resp = await cliente.GetFromJsonAsync<RespuestaApi<List<MetaProyecto>>>(urlBaseApi);
            listaAsociaciones = resp?.Datos ?? new();

            foreach (var a in listaAsociaciones)
            {
                a.MetaNombre = GetMetaNombre(a.IdMeta);
                a.ProyectoNombre = GetProyectoNombre(a.IdProyecto);
            }

            mensaje = $"Se cargaron {listaAsociaciones.Count} asociación(es).";
            claseAviso = "alert alert-success";
        }
        catch (Exception ex)
        {
            mensaje = $"Error al listar: {ex.Message}";
            claseAviso = "alert alert-danger";
        }
        finally { cargando = false; }
    }

    private async Task BuscarPorId()
    {
        if (idBusqueda == 0)
        {
            mensaje = "Debe indicar un ID válido.";
            claseAviso = "alert alert-warning";
            return;
        }

        try
        {
            var cliente = fabricaHttp.CreateClient("ApiMeta_Proyecto");
            var ruta = $"{urlBaseApi}/id/{idBusqueda}";
            var resp = await cliente.GetFromJsonAsync<RespuestaApi<List<MetaProyecto>>>(ruta);

            if (resp?.Datos is null || !resp.Datos.Any())
            {
                mensaje = $"No se encontró una asociación con ID {idBusqueda}.";
                claseAviso = "alert alert-warning";
                existeAsociacion = false;
                asociacionActual = new();
                return;
            }

            asociacionActual = resp.Datos.First();
            existeAsociacion = true;
            mensaje = "Asociación cargada.";
            claseAviso = "alert alert-success";
        }
        catch (Exception ex)
        {
            mensaje = $"Error al buscar: {ex.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task GuardarSegunEstado()
    {
        if (existeAsociacion)
            await ActualizarAsociacion();
        else
            await CrearAsociacion();
    }

    private async Task CrearAsociacion()
    {
        try
        {
            var cliente = fabricaHttp.CreateClient("ApiMeta_Proyecto");

            // ⚙️ Payload filtrado (sin NotMapped)
            var payload = new
            {
                IdMeta = asociacionActual.IdMeta,
                IdProyecto = asociacionActual.IdProyecto,
                FechaAsociacion = asociacionActual.FechaAsociacion
            };

            var resp = await cliente.PostAsJsonAsync(urlBaseApi, payload);
            if (resp.IsSuccessStatusCode)
            {
                mensaje = "Asociación creada correctamente.";
                claseAviso = "alert alert-success";
                await CargarAsociaciones();
                LimpiarFormulario();
            }
            else
            {
                mensaje = $"Error al crear: {await resp.Content.ReadAsStringAsync()}";
                claseAviso = "alert alert-danger";
            }
        }
        catch (Exception ex)
        {
            mensaje = $"Error al crear: {ex.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task ActualizarAsociacion()
    {
        try
        {
            var cliente = fabricaHttp.CreateClient("ApiMeta_Proyecto");
            var ruta = $"{urlBaseApi}/id/{asociacionActual.Id}";

            // ⚙️ Payload filtrado (sin NotMapped)
            var payload = new
            {
                IdMeta = asociacionActual.IdMeta,
                IdProyecto = asociacionActual.IdProyecto,
                FechaAsociacion = asociacionActual.FechaAsociacion
            };

            var resp = await cliente.PutAsJsonAsync(ruta, payload);
            if (resp.IsSuccessStatusCode)
            {
                mensaje = "Asociación actualizada correctamente.";
                claseAviso = "alert alert-success";
                await CargarAsociaciones();
            }
            else
            {
                mensaje = $"Error al actualizar: {await resp.Content.ReadAsStringAsync()}";
                claseAviso = "alert alert-danger";
            }
        }
        catch (Exception ex)
        {
            mensaje = $"Error al actualizar: {ex.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task ConfirmarEliminar()
    {
        if (asociacionActual.Id == 0) return;
        bool confirmado = await JS.InvokeAsync<bool>("confirm", $"¿Eliminar la asociación #{asociacionActual.Id}?");
        if (confirmado)
            await EliminarAsociacion(asociacionActual.Id);
    }

    private async Task EliminarAsociacion(int id)
    {
        try
        {
            var cliente = fabricaHttp.CreateClient("ApiMeta_Proyecto");
            var ruta = $"{urlBaseApi}/id/{id}";
            var resp = await cliente.DeleteAsync(ruta);

            if (resp.IsSuccessStatusCode)
            {
                mensaje = "Asociación eliminada correctamente.";
                claseAviso = "alert alert-success";
                await CargarAsociaciones();
                LimpiarFormulario();
            }
            else
            {
                mensaje = $"Error al eliminar: {await resp.Content.ReadAsStringAsync()}";
                claseAviso = "alert alert-danger";
            }
        }
        catch (Exception ex)
        {
            mensaje = $"Error al eliminar: {ex.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task ProbarConexion()
    {
        try
        {
            var cliente = fabricaHttp.CreateClient("ApiMeta_Proyecto");
            var resp = await cliente.GetAsync(urlBaseApi);
            mensaje = resp.IsSuccessStatusCode ? "Conexión OK." : $"Respuesta {(int)resp.StatusCode}";
            claseAviso = resp.IsSuccessStatusCode ? "alert alert-success" : "alert alert-warning";
        }
        catch (Exception ex)
        {
            mensaje = $"Error de conexión: {ex.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private void CargarEnFormulario(MetaProyecto a)
    {
        asociacionActual = new MetaProyecto
        {
            Id = a.Id,
            IdMeta = a.IdMeta,
            IdProyecto = a.IdProyecto,
            FechaAsociacion = a.FechaAsociacion
        };
        existeAsociacion = true;
        mensaje = "Asociación cargada.";
        claseAviso = "alert alert-info";
    }

    private void LimpiarFormulario()
    {
        asociacionActual = new MetaProyecto();
        existeAsociacion = false;
        mensaje = "";
    }

    private string GetMetaNombre(int id) =>
        listaMetas.FirstOrDefault(x => x.Id == id)?.Titulo ?? $"Meta #{id}";

    private string GetProyectoNombre(int id) =>
        listaProyectos.FirstOrDefault(x => x.Id == id)?.Titulo ?? $"Proyecto #{id}";
}