@page "/logs_sistema"
@using FrontendBlazorApi.Models
@using FrontendBlazorApi.Servicios
@inherits PaginaAutenticada
@inject ServicioApiGenerico servicioApi
@rendermode InteractiveServer

<PageTitle>Logs del Sistema</PageTitle>

<h3 class="mb-3">Historial de Logs del Sistema</h3>

<div class="mb-3">
    <button type="button" class="btn btn-outline-primary" @onclick="CargarLogs">Mostrar todo</button>
    <button type="button" class="btn btn-outline-dark" @onclick="Limpiar">Limpiar</button>
</div>

@if (!string.IsNullOrWhiteSpace(Mensaje))
{
    <div class="@ClaseAviso">@Mensaje</div>
}

@if (Cargando)
{
    <p><em>Cargando logs...</em></p>
}
else if (ListaLogs.Count == 0)
{
    <p>No existen registros en el log.</p>
}
else
{
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Usuario</th>
                <th>Módulo</th>
                <th>Acción</th>
                <th>ID Afectado</th>
                <th>Datos Anteriores</th>
                <th>Datos Nuevos</th>
                <th>Fecha</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var l in ListaLogs)
            {
                <tr>
                    <td>@l.Id</td>
                    <td>@l.UsuarioEmail</td>
                    <td>@l.Modulo</td>
                    <td>@l.Accion</td>
                    <td>@l.IdAfectado</td>
                    <td>@l.DatosAnteriores</td>
                    <td>@l.DatosNuevos</td>
                    <td>@l.Fecha.ToString("yyyy-MM-dd HH:mm:ss")</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<LogSistema> ListaLogs = new();
    private bool Cargando = false;
    private string Mensaje = "";
    private string ClaseAviso = "alert alert-info";

    protected override async Task OnInitializedAsync()
    {
        await CargarLogs();
    }

    // ---------------------------------------------------------
    // LISTAR (MISMA LÓGICA QUE USUARIOS)
    // ---------------------------------------------------------
    private async Task CargarLogs()
    {
        try
        {
            Cargando = true;

            // usa servicioApi EXACTAMENTE como Usuarios
            ListaLogs = await servicioApi.ObtenerTodosAsync<LogSistema>("LogSistema");

            Mensaje = $"Se cargaron {ListaLogs.Count} registros.";
            ClaseAviso = "alert alert-success";
        }
        catch (Exception ex)
        {
            Mensaje = $"Error al listar logs: {ex.Message}";
            ClaseAviso = "alert alert-danger";
        }
        finally
        {
            Cargando = false;
        }
    }

    private void Limpiar()
    {
        ListaLogs.Clear();
        Mensaje = "";
        ClaseAviso = "alert alert-info";
    }

    // ---------------------------------------------------------
    // MODELO
    // ---------------------------------------------------------
    public class LogSistema
    {
        public int Id { get; set; }
        public string? UsuarioEmail { get; set; }
        public string Modulo { get; set; } = "";
        public string Accion { get; set; } = "";
        public int? IdAfectado { get; set; }
        public string? DatosAnteriores { get; set; }
        public string? DatosNuevos { get; set; }
        public DateTime Fecha { get; set; }
        public string? IpCliente { get; set; }
        public string? Descripcion { get; set; }
    }
}
