@page "/Calendario"
@using System.Net.Http.Json
@using FrontendBlazorApi.Models
@inherits PaginaAutenticada
@using FrontendBlazorApi.Servicios
@inject ServicioAutenticacion servicioAuth

@rendermode InteractiveServer

<style>
    .titulo-eventos {
        font-size: 30px;
        font-weight: bold;
        margin-bottom: 25px;
        color: #1c3d72;
    }

    .filtros-fecha {
        display: flex;
        gap: 15px;
        margin-bottom: 30px;
    }

    .contenedor-cards {
        display: flex;
        flex-direction: column;
        gap: 25px;
    }

    .card-evento {
        background: #ffffff;
        border-radius: 12px;
        border: 1px solid #e1e1e1;
        padding: 22px 28px;
        box-shadow: 0px 2px 6px rgba(0,0,0,0.1);
        transition: all 0.2s ease;
    }

        .card-evento:hover {
            box-shadow: 0px 4px 14px rgba(0,0,0,0.16);
            transform: translateY(-3px);
        }

    .card-fechas {
        color: #6a6a6a;
        font-size: 15px;
        margin-bottom: 8px;
    }

    .card-titulo {
        font-size: 22px;
        font-weight: bold;
        color: #0d4ea1;
        margin-bottom: 8px;
    }

    .card-desc {
        color: #444444;
        margin-bottom: 14px;
        font-size: 15px;
    }

    .badge-success {
        background: #2ecc71;
        color: white;
        padding: 6px 14px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: bold;
    }

    .loading {
        margin-top: 20px;
        font-size: 18px;
        color: #1c3d72;
    }
</style>

<h3 class="titulo-eventos">Eventos / Cronograma</h3>

<!-- FILTROS -->
<div class="filtros-fecha">
    <input type="date" class="form-control" @bind="fechaDesde" />
    <input type="date" class="form-control" @bind="fechaHasta" />
    <button class="btn btn-primary" @onclick="Filtrar">Buscar</button>
    <button class="btn btn-secondary" @onclick="Limpiar">Limpiar</button>
</div>

@if (!string.IsNullOrWhiteSpace(error))
{
    <div class="alert alert-danger">@error</div>
}
else if (!cargado)
{
    <div class="loading"><i class="bi bi-arrow-repeat"></i> Cargando proyectos...</div>
}
else if (proyectosFiltrados.Count == 0)
{
    <div class="alert alert-info">No se encontraron proyectos.</div>
}
else
{
    <div class="contenedor-cards">

        @foreach (var p in proyectosFiltrados)
        {
            <div class="card-evento">

                <div class="card-fechas">
                    <strong>
                        @(p.FechaInicio?.ToString("MMMM dd, yyyy") ?? "Sin inicio")
                        -
                        @(p.FechaFinPrevista?.ToString("MMMM dd, yyyy") ?? "Sin fin")
                    </strong>
                </div>

                <h4 class="card-titulo">@p.Titulo</h4>

                <p class="card-desc">@p.Descripcion</p>

                <span class="badge-success">
                    @(p.FechaFinalizacion != null ? "Finalizado" : "Activo")
                </span>

            </div>
        }

    </div>
}

@code {
    private string? error;
    private List<Proyecto> proyectos = new();
    private List<Proyecto> proyectosFiltrados = new();

    private DateTime? fechaDesde;
    private DateTime? fechaHasta;

    private bool cargado = false;

    // 🔥 CORRECTO: igual que logs_sistema
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await CargarProyectos();
            cargado = true;

            StateHasChanged();
        }
    }

    private async Task CargarProyectos()
    {
        try
        {
            var clienteAut = await servicioAuth.ObtenerClienteAutenticadoAsync();
            var respuesta = await clienteAut.GetAsync("api/proyecto");

            if (!respuesta.IsSuccessStatusCode)
            {
                error = $"Error API: {respuesta.StatusCode}";
                return;
            }

            var apiResp = await respuesta.Content.ReadFromJsonAsync<ApiResponse<List<Proyecto>>>();

            proyectos = apiResp?.Datos ?? new();
            proyectosFiltrados = proyectos.ToList();
        }
        catch (Exception ex)
        {
            error = "Error al cargar proyectos: " + ex.Message;
        }
    }

    private void Filtrar()
    {
        var lista = proyectos.AsQueryable();

        if (fechaDesde != null)
            lista = lista.Where(p => p.FechaInicio >= fechaDesde);

        if (fechaHasta != null)
            lista = lista.Where(p => p.FechaFinPrevista <= fechaHasta);

        proyectosFiltrados = lista.ToList();
    }

    private void Limpiar()
    {
        fechaDesde = null;
        fechaHasta = null;
        proyectosFiltrados = proyectos;
    }

    public class ApiResponse<T>
    {
        public int Estado { get; set; }
        public string Mensaje { get; set; } = "";
        public T Datos { get; set; } = default!;
    }
}
