@page "/archivoentregable"
@using System.ComponentModel.DataAnnotations
@using FrontendBlazorApi.Models
@using FrontendBlazorApi.Servicios
@inherits PaginaAutenticada
@inject ServicioApiGenerico servicioApi
@inject IJSRuntime JS
@rendermode InteractiveServer

<PageTitle>Asociar Archivos y Entregables</PageTitle>

<div class="d-flex align-items-center mb-3">
    <i class="bi bi-link-45deg fs-3 text-primary me-2"></i>
    <h3 class="mb-0 fw-bold">Asociación de Archivos con Entregables</h3>
</div>

@if (!string.IsNullOrWhiteSpace(mensaje))
{
    <div class="@claseAviso shadow-sm mb-3" role="alert">
        <i class="bi bi-info-circle-fill me-2"></i>@mensaje
    </div>
}

<div class="card border-primary shadow-sm mb-4">
    <div class="card-header bg-primary text-white fw-bold">
        <i class="bi bi-link-45deg me-2"></i>Formulario de Asociación
    </div>

    <div class="card-body">
        <div class="d-flex flex-wrap gap-2 mb-3">
            <button class="btn btn-outline-secondary" @onclick="ProbarConexion"><i class="bi bi-wifi"></i></button>
            <button class="btn btn-outline-primary" @onclick="CargarAsociaciones"><i class="bi bi-list"></i></button>
            <button class="btn btn-outline-dark" @onclick="LimpiarFormulario"><i class="bi bi-eraser"></i></button>
        </div>

        <EditForm Model="asociacionActual" OnValidSubmit="GuardarAsociacion">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">Archivo *</label>
                    <InputSelect class="form-select" @bind-Value="asociacionActual.IdArchivo">
                        <option value="0">-- Seleccione un archivo --</option>
                        @foreach (var a in listaArchivos)
                        {
                            <option value="@a.Id">@a.Nombre</option>
                        }
                    </InputSelect>
                    <ValidationMessage For="@(() => asociacionActual.IdArchivo)" />
                </div>

                <div class="col-md-6">
                    <label class="form-label">Entregable *</label>
                    <InputSelect class="form-select" @bind-Value="asociacionActual.IdEntregable">
                        <option value="0">-- Seleccione un entregable --</option>
                        @foreach (var e in listaEntregables)
                        {
                            <option value="@e.Id">@e.Titulo</option>
                        }
                    </InputSelect>
                    <ValidationMessage For="@(() => asociacionActual.IdEntregable)" />
                </div>
            </div>

            <div class="mt-4 d-flex flex-wrap gap-2">
                <button type="submit" class="btn btn-primary"><i class="bi bi-plus-circle"></i></button>
                <button type="button" class="btn btn-danger" @onclick="ConfirmarEliminar" disabled="@(!existeAsociacion)">
                    <i class="bi bi-trash"></i>
                </button>
            </div>
        </EditForm>
    </div>
</div>

<div class="card border-primary shadow-sm">
    <div class="card-header bg-primary text-white fw-bold">
        <i class="bi bi-table me-2"></i>Asociaciones Registradas
    </div>

    <div class="card-body">
        @if (cargando)
        {
            <p><em><i class="bi bi-arrow-repeat"></i> Cargando asociaciones...</em></p>
        }
        else if (listaAsociaciones.Count == 0)
        {
            <div class="alert alert-info mb-0">
                <i class="bi bi-info-circle me-2"></i>No hay asociaciones registradas.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Archivo</th>
                            <th>Entregable</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var a in listaAsociaciones)
                        {
                            <tr>
                                <td>@a.ArchivoNombre</td>
                                <td>@a.EntregableTitulo</td>
                                <td>
                                    <button class="btn btn-sm btn-outline-primary" @onclick="@(() => CargarEnFormulario(a))">
                                        <i class="bi bi-upload"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

@code {
    private List<Archivo_Entregable> listaAsociaciones = new();
    private List<Archivo> listaArchivos = new();
    private List<Entregable> listaEntregables = new();

    private Archivo_Entregable asociacionActual = new();
    private bool existeAsociacion = false;
    private string mensaje = "";
    private string claseAviso = "alert alert-info";
    private bool cargando = false;

    protected override async Task OnInitializedAsync()
    {
        await CargarArchivos();
        await CargarEntregables();
        await CargarAsociaciones();
    }

    private async Task CargarArchivos()
    {
        try
        {
            listaArchivos = await servicioApi.ObtenerTodosAsync<Archivo>("archivo");
        }
        catch { }
    }

    private async Task CargarEntregables()
    {
        try
        {
            listaEntregables = await servicioApi.ObtenerTodosAsync<Entregable>("entregable");
        }
        catch { }
    }

    private async Task CargarAsociaciones()
    {
        try
        {
            cargando = true;
            listaAsociaciones = await servicioApi.ObtenerTodosAsync<Archivo_Entregable>("archivo_entregable");

            foreach (var a in listaAsociaciones)
            {
                a.ArchivoNombre = listaArchivos.FirstOrDefault(x => x.Id == a.IdArchivo)?.Nombre ?? $"#{a.IdArchivo}";
                a.EntregableTitulo = listaEntregables.FirstOrDefault(x => x.Id == a.IdEntregable)?.Titulo ?? $"#{a.IdEntregable}";
            }

            mensaje = $"Se cargaron {listaAsociaciones.Count} asociación(es).";
            claseAviso = "alert alert-success";
        }
        catch (Exception ex)
        {
            mensaje = $"Error al listar: {ex.Message}";
            claseAviso = "alert alert-danger";
        }
        finally { cargando = false; }
    }

    private async Task GuardarAsociacion()
    {
        try
        {
            await servicioApi.CrearAsync("archivo_entregable", asociacionActual);

            mensaje = "Asociación creada correctamente.";
            claseAviso = "alert alert-success";
            await CargarAsociaciones();
            LimpiarFormulario();
        }
        catch (Exception ex)
        {
            mensaje = $"Error al crear: {ex.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task ConfirmarEliminar()
    {
        if (asociacionActual.IdArchivo == 0 || asociacionActual.IdEntregable == 0) return;
        bool confirmado = await JS.InvokeAsync<bool>("confirm", $"¿Eliminar esta asociación?");
        if (confirmado)
            await EliminarAsociacion();
    }

    private async Task EliminarAsociacion()
    {
        try
        {
            await servicioApi.EliminarAsync("archivo_entregable", "idarchivo", asociacionActual.IdArchivo);

            mensaje = "Asociación eliminada correctamente.";
            claseAviso = "alert alert-success";
            await CargarAsociaciones();
            LimpiarFormulario();
        }
        catch (Exception ex)
        {
            mensaje = $"Error al eliminar: {ex.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task ProbarConexion()
    {
        try
        {
            await servicioApi.ObtenerTodosAsync<Archivo_Entregable>("archivo_entregable");
            mensaje = "Conexión OK.";
            claseAviso = "alert alert-success";
        }
        catch (Exception ex)
        {
            mensaje = $"Error de conexión: {ex.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private void CargarEnFormulario(Archivo_Entregable a)
    {
        asociacionActual = new Archivo_Entregable
            {
                IdArchivo = a.IdArchivo,
                IdEntregable = a.IdEntregable
            };
        existeAsociacion = true;
        mensaje = "Asociación cargada.";
        claseAviso = "alert alert-info";
    }

    private void LimpiarFormulario()
    {
        asociacionActual = new Archivo_Entregable();
        existeAsociacion = false;
        mensaje = "";
    }
}