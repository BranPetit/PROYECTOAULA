@page "/entregables"
@using System.Net.Http.Json
@using System.ComponentModel.DataAnnotations
@using FrontendBlazorApi.Models
@inject IHttpClientFactory fabricaHttp
@inject IJSRuntime JS
@rendermode InteractiveServer

<PageTitle>Entregables</PageTitle>

<h3>Gesti贸n de Entregables</h3>

<!-- Botones globales -->
<div class="mb-3 d-flex gap-2">
    <button type="button" class="btn btn-outline-secondary" @onclick="ProbarConexion">Probar conexi贸n</button>
    <button type="button" class="btn btn-outline-primary" @onclick="CargarEntregables">Mostrar todos</button>
    <button type="button" class="btn btn-outline-dark" @onclick="LimpiarFormulario">Limpiar</button>
</div>

<!-- Buscador por ID -->
<div class="mb-3 d-flex gap-2">
    <InputNumber class="form-control" placeholder="Ingrese ID para buscar" @bind-Value="idBusqueda" />
    <button type="button" class="btn btn-secondary" @onclick="BuscarPorId">Buscar</button>
</div>

<!-- Mensajes de estado -->
@if (!string.IsNullOrWhiteSpace(mensaje))
{
    <div class="@claseAviso" role="alert">@mensaje</div>
}

<h4>Formulario de Entregable</h4>

<EditForm Model="entregableActual" OnValidSubmit="GuardarSegunEstado">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="row g-3">
        <div class="col-md-3">
            <label class="form-label">C贸digo *</label>
            <InputText class="form-control" @bind-Value="entregableActual.Codigo" />
            <ValidationMessage For="@(() => entregableActual.Codigo)" />
        </div>

        <div class="col-md-3">
            <label class="form-label">T铆tulo *</label>
            <InputText class="form-control" @bind-Value="entregableActual.Titulo" />
            <ValidationMessage For="@(() => entregableActual.Titulo)" />
        </div>

        <div class="col-md-4">
            <label class="form-label">Descripci贸n *</label>
            <InputText class="form-control" @bind-Value="entregableActual.Descripcion" />
            <ValidationMessage For="@(() => entregableActual.Descripcion)" />
        </div>

        <div class="col-md-3">
            <label class="form-label">Fecha Inicio *</label>
            <InputDate class="form-control" @bind-Value="entregableActual.FechaInicio" />
            <ValidationMessage For="@(() => entregableActual.FechaInicio)" />
        </div>

        <div class="col-md-3">
            <label class="form-label">Fecha Fin Prevista *</label>
            <InputDate class="form-control" @bind-Value="entregableActual.FechaFinPrevista" />
            <ValidationMessage For="@(() => entregableActual.FechaFinPrevista)" />
        </div>

        <div class="col-md-3">
            <label class="form-label">Fecha Modificaci贸n</label>
            <InputDate class="form-control" @bind-Value="entregableActual.FechaModificacion" />
        </div>

        <div class="col-md-3">
            <label class="form-label">Fecha Finalizaci贸n</label>
            <InputDate class="form-control" @bind-Value="entregableActual.FechaFinalizacion" />
        </div>
    </div>

    <div class="mt-3 d-flex flex-wrap gap-2">
        <button type="submit" class="btn btn-primary">@textoBotonGuardar</button>
        <button type="button" class="btn btn-warning" @onclick="ActualizarEntregable" disabled="@(!existeEntregable)">Actualizar</button>
        <button type="button" class="btn btn-danger" @onclick="ConfirmarEliminar" disabled="@(!existeEntregable)">Eliminar</button>
    </div>
</EditForm>

<hr />

@if (cargando)
{
    <p><em>Cargando entregables...</em></p>
}
else if (listaEntregables.Count == 0)
{
    <p>No hay entregables disponibles.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>C贸digo</th>
                <th>T铆tulo</th>
                <th>Descripci贸n</th>
                <th>Fecha Inicio</th>
                <th>Fecha Fin Prevista</th>
                <th>Fecha Modificaci贸n</th>
                <th>Fecha Finalizaci贸n</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var e in listaEntregables)
            {
                <tr>
                    <td>@e.Id</td>
                    <td>@e.Codigo</td>
                    <td>@e.Titulo</td>
                    <td>@e.Descripcion</td>
                    <td>@e.FechaInicio?.ToString("yyyy-MM-dd")</td>
                    <td>@e.FechaFinPrevista?.ToString("yyyy-MM-dd")</td>
                    <td>@e.FechaModificacion?.ToString("yyyy-MM-dd")</td>
                    <td>@e.FechaFinalizacion?.ToString("yyyy-MM-dd")</td>
                    <td>
                        <button type="button" class="btn btn-sm btn-outline-primary"
                                @onclick="@(() => CargarEnFormulario(e))">
                            Cargar
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Entregable> listaEntregables = new();
    [SupplyParameterFromForm]
    private Entregable entregableActual { get; set; } = new();

    private int idBusqueda { get; set; }
    private bool existeEntregable = false;
    private string textoBotonGuardar = "Crear";
    private string mensaje = "";
    private string claseAviso = "alert alert-info";
    private bool cargando = false;

    private const string urlBaseApi = "api/entregable";

    protected override async Task OnInitializedAsync()
    {
        await CargarEntregables();
    }

    private async Task CargarEntregables()
    {
        try
        {
            cargando = true;
            var cliente = fabricaHttp.CreateClient("ApiEntregable");
            var respuesta = await cliente.GetFromJsonAsync<RespuestaApi<List<Entregable>>>(urlBaseApi);
            listaEntregables = respuesta?.Datos ?? new();
            mensaje = $"Se cargaron {listaEntregables.Count} entregable(s).";
            claseAviso = "alert alert-success";
        }
        catch (Exception ex)
        {
            mensaje = $"Error al listar: {ex.Message}";
            claseAviso = "alert alert-danger";
        }
        finally { cargando = false; }
    }

    private async Task BuscarPorId()
{
    if (idBusqueda == 0)
    {
        mensaje = "Debe indicar un ID v谩lido.";
        claseAviso = "alert alert-warning";
        return;
    }

    try
    {
        var cliente = fabricaHttp.CreateClient("ApiEntregable");
        var ruta = $"{urlBaseApi}/id/{idBusqueda}";
        var respuesta = await cliente.GetFromJsonAsync<RespuestaApi<List<Entregable>>>(ruta);

        if (respuesta?.Datos is null || !respuesta.Datos.Any())
        {
            // Aqu铆 est谩 la advertencia cuando no se encuentra
            mensaje = $"No se encontr贸 un entregable con ID {idBusqueda}.";
            claseAviso = "alert alert-warning";
            existeEntregable = false;
            textoBotonGuardar = "Crear";
            entregableActual = new Entregable(); // limpiamos el formulario si no se encuentra
            return;
        }

        var encontrado = respuesta.Datos.First();
        entregableActual = encontrado;
        existeEntregable = true;
        textoBotonGuardar = "Actualizar";
        mensaje = "Entregable cargado.";
        claseAviso = "alert alert-success";
    }
    catch (Exception ex)
    {
        mensaje = $"No existe el entregable con ID {idBusqueda}: {ex.Message}";
        claseAviso = "alert alert-danger";
    }
}

    private async Task GuardarSegunEstado()
    {
        if (existeEntregable)
            await ActualizarEntregable();
        else
            await CrearEntregable();
    }

    private async Task CrearEntregable()
{
    try
    {
        var cliente = fabricaHttp.CreateClient("ApiEntregable");

        // Creamos un objeto an贸nimo SIN el Id
        var entregableParaCrear = new
        {
            Codigo = entregableActual.Codigo,
            Titulo = entregableActual.Titulo,
            Descripcion = entregableActual.Descripcion,
            FechaInicio = entregableActual.FechaInicio,
            FechaFinPrevista = entregableActual.FechaFinPrevista,
            FechaModificacion = entregableActual.FechaModificacion,
            FechaFinalizacion = entregableActual.FechaFinalizacion
        };

        var resp = await cliente.PostAsJsonAsync(urlBaseApi, entregableParaCrear);

        if (resp.IsSuccessStatusCode)
        {
            mensaje = "Entregable creado correctamente.";
            claseAviso = "alert alert-success";
            await CargarEntregables();
            LimpiarFormulario();
        }
        else
        {
            mensaje = $"Error al crear: {await resp.Content.ReadAsStringAsync()}";
            claseAviso = "alert alert-danger";
        }
    }
    catch (Exception ex)
    {
        mensaje = $"Error al crear: {ex.Message}";
        claseAviso = "alert alert-danger";
    }
}

    private async Task ActualizarEntregable()
{
    try
    {
        var cliente = fabricaHttp.CreateClient("ApiEntregable");
        var ruta = $"{urlBaseApi}/id/{entregableActual.Id}";

        
        var entregableParaActualizar = new
        {
            Codigo = entregableActual.Codigo,
            Titulo = entregableActual.Titulo,
            Descripcion = entregableActual.Descripcion,
            FechaInicio = entregableActual.FechaInicio,
            FechaFinPrevista = entregableActual.FechaFinPrevista,
            FechaModificacion = entregableActual.FechaModificacion,
            FechaFinalizacion = entregableActual.FechaFinalizacion
        };

        var resp = await cliente.PutAsJsonAsync(ruta, entregableParaActualizar);

        if (resp.IsSuccessStatusCode)
        {
            mensaje = "Actualizado correctamente.";
            claseAviso = "alert alert-success";
            await CargarEntregables();
        }
        else
        {
            mensaje = $"Error al actualizar: {await resp.Content.ReadAsStringAsync()}";
            claseAviso = "alert alert-danger";
        }
    }
    catch (Exception ex)
    {
        mensaje = $"Error al actualizar: {ex.Message}";
        claseAviso = "alert alert-danger";
    }
}
    private async Task ConfirmarEliminar()
    {
        bool confirmado = await JS.InvokeAsync<bool>("confirm", $"驴Seguro que desea eliminar el entregable con ID {entregableActual.Id}?");
        if (confirmado)
            await EliminarEntregable();
    }

    private async Task EliminarEntregable()
    {
        try
        {
            var cliente = fabricaHttp.CreateClient("ApiEntregable");
            var ruta = $"{urlBaseApi}/id/{entregableActual.Id}";
            var resp = await cliente.DeleteAsync(ruta);

            if (resp.IsSuccessStatusCode)
            {
                mensaje = "Eliminado correctamente.";
                claseAviso = "alert alert-success";
                await CargarEntregables();
                LimpiarFormulario();
            }
            else
            {
                mensaje = $"Error al eliminar: {await resp.Content.ReadAsStringAsync()}";
                claseAviso = "alert alert-danger";
            }
        }
        catch (Exception ex)
        {
            mensaje = $"Error al eliminar: {ex.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task ProbarConexion()
    {
        try
        {
            var cliente = fabricaHttp.CreateClient("ApiEntregable");
            var resp = await cliente.GetAsync(urlBaseApi);
            mensaje = resp.IsSuccessStatusCode ? "Conexi贸n OK." : $"Respuesta {(int)resp.StatusCode}";
            claseAviso = resp.IsSuccessStatusCode ? "alert alert-success" : "alert alert-warning";
        }
        catch (Exception ex)
        {
            mensaje = $"Error de conexi贸n: {ex.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private void CargarEnFormulario(Entregable e)
    {
        entregableActual = new Entregable
        {
            Id = e.Id,
            Codigo = e.Codigo,
            Titulo = e.Titulo,
            Descripcion = e.Descripcion,
            FechaInicio = e.FechaInicio,
            FechaFinPrevista = e.FechaFinPrevista,
            FechaModificacion = e.FechaModificacion,
            FechaFinalizacion = e.FechaFinalizacion
        };
        existeEntregable = true;
        textoBotonGuardar = "Actualizar";
        mensaje = "Entregable cargado desde listado.";
        claseAviso = "alert alert-info";
    }

    private void LimpiarFormulario()
    {
        entregableActual = new Entregable();
        entregableActual.Id = 0; // evitar mandar un ID inv谩lido
        existeEntregable = false;
        textoBotonGuardar = "Crear";
        mensaje = "";
        claseAviso = "alert alert-info";
    }
}
